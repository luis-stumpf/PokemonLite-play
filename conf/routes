# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

GET     /rules                      controllers.HomeController.rules()

+nocsrf
POST    /playerNames                       controllers.HomeController.initPlayers
GET     /playerNames                       controllers.HomeController.playerNames

+nocsrf
POST    /playerPokemons                       controllers.HomeController.initPokemons
GET     /playerPokemons                       controllers.HomeController.playerPokemons

GET     /game                       controllers.HomeController.game()

GET     /restart                    controllers.HomeController.restartGame()

+nocsrf
POST    /initPlayers                       controllers.HomeController.initPlayers()
GET     /initPlayers                       controllers.HomeController.initPlayers()

+nocsrf
POST    /initPokemons                       controllers.HomeController.initPokemons()
GET     /initPokemons                       controllers.HomeController.initPokemons()

+nocsrf
POST     /api/decision                       controllers.HomeController.decision()

+nocsrf
POST     /api/fighting                       controllers.HomeController.fighting()

+nocsrf
POST     /api/switch                       controllers.HomeController.switch()

GET      /api/gameJson                       controllers.HomeController.gameJson()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

